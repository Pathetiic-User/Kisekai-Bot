{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "*.js"],
  "exclude": ["node_modules"]
}